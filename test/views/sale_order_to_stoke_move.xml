<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="report_saleorder_document_inherit_sale_management"
              inherit_id="sale.report_saleorder_document">
        <xpath expr="//t/t/t[3]/div[@t-field='doc.partner_id']"
               position="before">
            <div t-if="doc.partner_id" t-field="doc.partner_id.name"
                 t-options="{'widget': 'barcode', 'width': 600, 'height': 120, 'img_style': 'max-height:50pt;max-width:100%;', 'img_align': 'center'}"/>
            <div style="padding:0; margin:0px; padding-top:10px; padding-bottom:10px; text-align:center;">
            </div>
             <div class="col-3 mt-1">
                    <img t-att-src="'/report/barcode/QR/'+doc.name" style="width:150px;height:150px;" alt="Barcode"/>
             </div>
        </xpath>
    </template>
</odoo>
