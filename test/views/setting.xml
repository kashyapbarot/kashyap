<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_inherit_sale1"
                model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.sale1
            </field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='product_matrix']" position="after">
                    <div class="col-12 col-lg-6 o_setting_box"
                         id="variant_options">
                        <div class="o_setting_left_pane">
                            <field name="group_product_variant"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_product_variant"/>
                            <a href="https://www.odoo.com/documentation/16.0/applications/sales/sales/products_prices/products/variants.html"
                               title="Documentation" class="o_doc_link"
                               target="_blank"/>
                            <div class="text-muted">
                                Sell variants of a product using attributes
                                (size, color, etc.)
                            </div>
                            <div class="content-group"
                                 attrs="{'invisible': [('group_product_variant','=',False)]}">
                                <div class="mt8">
                                    <button name="164" icon="fa-arrow-right"
                                            type="action" string="Attributes"
                                            class="btn-link"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>