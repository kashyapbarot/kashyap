<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_sale_wizard_form" model="ir.ui.view">
        <field name="name">sale import</field>
        <field name="model">sale.xlsx.wizard</field>
        <field name="priority">4</field>
        <field name="arch" type="xml">
            <form string="productivity">
                <sheet>
                    <group>
                        <field name="file" widget="binary"
                               filename="file_name" />
                        <field name="partner_id"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                    <footer>
                        <button name="import_journal_sale_entry"
                                class="btn btn-success"
                                type="object"
                                string="Conform"/>
                        <button class="btn-secondary" type="object"
                                string="Cancel"
                                special="cancel" data-hotkey="x"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_import_sale_order" model="ir.actions.act_window">
        <field name="name">import</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.xlsx.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_sale_wizard_form"/>
    </record>

    <menuitem id="custom_sale_root" name="import"
              parent="sale.sale_menu_root"/>
    <menuitem id="custom_sale_sub_root" name="sale Wizard"
              parent="custom_sale_root"
              action="action_import_sale_order"/>
</odoo>
